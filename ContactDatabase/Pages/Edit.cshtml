@page
@model EditModel
@{
    ViewData["Title"] = "Edit Contact";
}

<!DOCTYPE html>
<html>
<head>
    <title>Edit Contact</title>
</head>
<body>
    <div class="container">
        <h1>Edit Contact</h1>

        <form method="post">
            <input type="hidden" asp-for="ID" />

            <div class="form-group">
                <label for="firstName">First Name</label>
                <input type="text" class="form-control" asp-for="Contact.FirstName" required>
            </div>
            <div class="form-group">
                <label for="lastName">Last Name</label>
                <input type="text" class="form-control" asp-for="Contact.LastName" required>
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" asp-for="Contact.Email" required>
            </div>
            <div class="form-group">
                <label for="title">Title</label>
                <select class="form-control" asp-for="Contact.Title">
                    <option value="Mr">Mr</option>
                    <option value="Mrs">Mrs</option>
                    <option value="Ms">Ms</option>
                    <option value="Dr">Dr</option>
                </select>
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea class="form-control" asp-for="Contact.Description"></textarea>
            </div>
            <div class="form-group">
                <label for="dateOfBirth">Date of Birth</label>
                <input type="date" class="form-control" asp-for="Contact.DateOfBirth">
            </div>
            <div class="form-group form-check">
                <input type="checkbox" class="form-check-input" asp-for="Contact.MarriageStatus">
                <label class="form-check-label" for="marriageStatus">Married</label>
            </div>

            <button type="submit" class="btn btn-primary">Save Changes</button>
        </form>
    </div>
</body>
</html>
